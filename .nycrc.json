{
  "reporter": [
    "text",
    "text-summary",
    "html",
    "lcov",
    "json"
  ],
  "report-dir": "coverage",
  "temp-dir": ".nyc_output",
  "check-coverage": false,
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80,
  "exclude": [
    "**/*.spec.js",
    "**/*.test.js",
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**",
    "**/.nyc_output/**",
    "**/webpack.config.js",
    "**/.package.sh",
    "**/coverage-config.template.js"
  ],
  "include": [
    "src/**/*.js"
  ],
  "sourceMap": true,
  "instrument": true
}

